{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (pytest)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest",   // .venv 가상환경 파일명을 의논해서 통일해야 할것같아요!
            "console": "integratedTerminal",
            "args": [
                "${file}",                              // 현재 열려 있는 파일(${file})을 테스트 대상으로, 출력은 바로 콘솔로
                "-s"
            ],
            "cwd": "${workspaceFolder}",                // 작업 디렉토리를 프로젝트 루트로 고정
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"  // src 기준 임포트 가능하게 하기 위함
            },
            "justMyCode": false
        }
    ]
}
